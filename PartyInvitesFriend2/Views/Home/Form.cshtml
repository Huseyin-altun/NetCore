@model PartyInvitesFriend2.Models.GuestResponse
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Form</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
</head>
<body>
    <div asp-validation-summary="All"></div>
    <form asp-action="Form" method="post" class="m-2">
        <div class="form-group">
            <label asp-for="Name">Adınız </label>
            <input asp-for="Name" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Email">E-posta adresiniz:</label>
            <input asp-for="Email" class="form-control" />
        </div>         <div>
            <label asp-for="Phone">Telefonunuz:</label>
            <input asp-for="Phone" class="form-control" />
        </div>
        <div class="form-group">
            <label>Katılacak mısın?</label>
            <select asp-for="WillAttend" class="form-control" >
                <option value="">Bir seçenek seçin</option>
                <option value="true">Evet orada olacağım</option>
                <option value="false">Hayır, gelemem</option>
            </select>
        </div>
        <button type="submit" class="btn btn-primary"> Forma Gönder</button>
    </form>
</body>
</html>