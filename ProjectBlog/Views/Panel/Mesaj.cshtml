
@model PagedList.Core.IPagedList<YazilimBlog.Models.Message>

@{
    Layout = "_Panel";
}



<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Gelen Mesajlar</h5>
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>

                                <th scope="col">Tam Ad</th>
                                <th scope="col">Email Adresi</th>
                                <th scope="col">Mesaj Detayı</th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model)
                            {
                                <tr>

                                    <td>@item.FullName</td>
                                    <td>@item.Email</td>
                                    <td>@item.Messages</td>

                                </tr>
                            }
                            <tr>
                                <td colspan="3" align="center">
                                    <pager list="@Model" asp-controller="Panel" asp-action="Mesaj" />
                                </td>
                            </tr>


                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
