
@model List<YazilimBlog.Models.Article>


@foreach (var item in Model)
{
    <a asp-controller="Home" asp-action="BlogDetails"  asp-route-id="@item.ArticlesID" class="list-group-item list-group-item-action flex-column align-items-start">
        <div class="w-100 justify-content-between">
            <img src="@item.CoverImage" alt="" class="img-fluid float-left">
            <h5 class="mb-1">@item.Write</h5>
            <small>@item.Date.ToString("dd MMMM yyyy")</small>
        </div>
    </a>
}
