
@model YazilimBlog.Models.Article


<section id="blog-header" data-stellar-background-ratio="0.5">
    <div class="overlay"></div>
    <div class="container">
        <div class="row">

            <div class="col-md-offset-1 col-md-5 col-sm-12">
                <h2>@Model.WriteTitle</h2>
            </div>

        </div>
    </div>
</section>

@Html.HiddenFor(x => x.ArticlesID)
<!-- BLOG DETAIL -->
<section id="blog-detail" data-stellar-background-ratio="0.5">
    <div class="container">
        <div class="row">

            <div class="col-md-offset-1 col-md-10 col-sm-12">
                <!-- BLOG THUMB -->
                <div class="blog-detail-thumb">
                    <div class="blog-image">
                        <img src="@Model.Image" class="img-responsive" alt="Blog Image">
                    </div>
                    <h2>@Model.WriteTitle</h2>
                    <p>@Html.Raw(@Model.WriteLength)</p>

                   
                   

         


                    
                    <div class="blog-social-share">
                        <h4>Bu makaleyi paylaş</h4>
                        <a href="#" class="btn btn-primary"><i class="fa fa-facebook"></i>facebook</a>
                        <a href="#" class="btn btn-success"><i class="fa fa-twitter"></i>twitter</a>
                        <a href="#" class="btn btn-danger"><i class="fa fa-medium"></i>Medium </a>
                    </div>
                </div>
            </div>

        </div>
    </div>
</section>